#!/usr/bin/env bash

# Vibranium comes with its own custom icon set, mainly for entries in custom menus such as AI, Power, etc.
# Since it is svg, we can change the colors of the icons, so we do. 

source "$XDG_CONFIG_HOME/vibranium/theme/current/vibranium-lib-theme"

ICONS_DIR="$XDG_DATA_HOME/icons/Vibranium/scalable/apps"

for file in "${ICONS_DIR}"/*; do
	sed -i "/style=/s/fill: #.*\"/fill: ${P_TEXT}\"/g" "$file"
	# sed -i "/style/s/\#.*;/${P_TEXT};/g" "$file"
done
