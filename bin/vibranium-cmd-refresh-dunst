#!/usr/bin/env bash

# Dunst does not support importing config files, but it can read multiple config files from stdin or using dunstctl.
# This allows us to logically separate default settings, colors, and user overrides (Vibranium settings)

dunstctl reload \
	"$VIBRANIUM/defaults/dunstrc" \
	"$XDG_CONFIG_HOME/dunst/dunstrc" \
	"$XDG_CONFIG_HOME/vibranium/theme/current/dunst"
