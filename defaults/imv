[options]
loop_input = true

overlay = true
overlay_font = Cascadia Code:9

overlay_text = $(bash imv-overlay ''"$imv_current_file"'')

overlay_background_color = 000000
overlay_background_alpha = cc
overlay_position_bottom = true

title_text = $imv_current_file

suppress_default_binds = true

[binds]
q = quit

l = next 1
j = prev 1

<Shift+L> = pan -20 0
<Shift+J> = pan +20 0
<Shift+I> = pan 0 +20
<Shift+K> = pan 0 -20

0 = reset
<Shift+R> = reset

r = rotate by 90
p = toggle_playing

o = overlay
f = fullscreen

<period> = next_frame
<Shift+plus> = zoom 5%
<minus> = zoom -5%

c = exec imv-copy ''"$imv_current_file"''
w = exec vibranium-core-set-wallpaper "$imv_current_file"

# vim:ft=dosini
